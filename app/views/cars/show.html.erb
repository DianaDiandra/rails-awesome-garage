<div class="col">
  <div class="card h-100 text-white bg-dark position-relative">
    <div class="position-relative">
      <%= image_tag "https://images.unsplash.com/photo-1588127333419-b9d7de223dcf?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" %>
      <div class="car-title">
        <%= "#{@car.brand}" %>
        <%= "#{@car.model}" %>
      </div>
      <div class="car-body">
        <p><strong>Fuel:</strong> <%= @car.fuel %></p>
        <p><strong>Fuel:</strong> <%= @car.year %></p>
      </div>
    </div>
  </div>
</div>
